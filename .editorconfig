root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

# C coding style based on Linux kernel.
# https://www.kernel.org/doc/html/v5.0/process/coding-style.html

[*.{sh,inc,conf}]
indent_style = tab
indent_size = 4

[*.{c,h}]
indent_style = tab
indent_size = 8
